{
  "name": "akipe/pnut",
  "description": "PHP client library for Network Ups Tools (NUT)",
  "type": "library",
  "keywords": ["nut", "network ups tools", "ups"],
  "license": "MIT",
  "authors": [
    {
      "name": "Milletre Julien",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=8.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^9"
  },
  "autoload": {
    "psr-4": {
      "PNut\\": "src/"}
  },
  "scripts": {
    "run-dev": "sudo docker-compose -f ./env/docker-compose.yml up -d",
    "stop-dev": "sudo docker-compose -f ./env/docker-compose.yml down",
    "build-dev": "sudo docker-compose -f ./env/docker-compose.yml build",
    "cli-dev": "sudo docker exec --interactive --tty --user 1000:1000 pnut_php_cli_dev bash",
    "prepare-test": "sudo docker-compose -f ./test/app/docker-compose.yml up -d",
    "stop-test": "sudo docker-compose -f ./test/app/docker-compose.yml down",
    "build-test": "sudo docker-compose -f ./test/app/docker-compose.yml build",
    "test": "phpunit ./test/src"
  }
}
